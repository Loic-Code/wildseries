{% extends 'base.html.twig' %}


{% block title %}All programs{% endblock %}


{% block body %}

    <h1 class="text-light bg-dark">Toutes les catégories de séries : </h1>

    {% for category in categories %}

        <div class="text-light bg-dark">

            <h2>{{ category.id }} / {{ category.name }}</h2>
            <a href="{{ path("category_show", { categoryName: category.name }) }}">Voir toutes les séries</a>
        </div>

    {% else %}

        Aucune série trouvée.

    {% endfor %}

{% endblock %}